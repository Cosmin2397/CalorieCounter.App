@page
@model CalorieCounter.Pages.Expecteds.EditModel

<h1>Edit Expected</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Expected.Id" value="@Model.Expected.Id" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Expected.User" class="control-label" title="Food Name"></label>
                <input asp-for="Expected.User" value="@Model.GetUser()" class="form-control" hidden/>
                <input asp-for="Expected.User" value="@Model.GetUser()" class="form-control" disabled/>
                <span asp-validation-for="Expected.User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expected.ExpectedKcal" class="control-label"></label>
                <input asp-for="Expected.ExpectedKcal" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Expected.ExpectedKcal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expected.ExpectedCarbs" class="control-label"></label>
                <input asp-for="Expected.ExpectedCarbs" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Expected.ExpectedCarbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expected.ExpectedProtein" class="control-label" title="Carbohidrates"></label>
                <input asp-for="Expected.ExpectedProtein" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Expected.ExpectedProtein" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expected.ExpectedFats" class="control-label"></label>
                <input asp-for="Expected.ExpectedFats" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Expected.ExpectedFats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expected.ExpectedFibers" class="control-label"></label>
                <input asp-for="Expected.ExpectedFibers" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Expected.ExpectedFibers" class="text-danger"></span>
            </div>
            <div class="form-group" style = "padding-top:10px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
